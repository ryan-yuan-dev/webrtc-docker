# 使用 ubuntu 20.04 作为基础镜像，支持多平台构建
FROM ubuntu:20.04

LABEL maintainer="Ryan"

# 避免交互式安装
ENV DEBIAN_FRONTEND=noninteractive

# 设置语言环境（UTF-8）
RUN apt-get update && apt-get install -y locales \
  && localedef -i en_US -c -f UTF-8 -A /usr/share/locale/locale.alias en_US.UTF-8 \
  && rm -rf /var/lib/apt/lists/*
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8

# 安装基础开发工具、Python、Java 等依赖
RUN apt-get update --fix-missing && apt-get install -y \
  sudo vim curl wget git python3 python3-pip \
  file pkg-config gdbserver cmake lsb-release software-properties-common gnupg \
  && rm -rf /var/lib/apt/lists/*

# 安装 LLVM（可自定义版本）
ARG LLVM_VERSION=18
ENV LLVM_VERSION=${LLVM_VERSION}

# 下载并安装 LLVM 官方仓库
RUN wget https://apt.llvm.org/llvm.sh && chmod +x llvm.sh \
  && ./llvm.sh ${LLVM_VERSION} all \
  && rm llvm.sh

# 安装 depot_tools 并添加到 PATH
ENV DEPOT_TOOLS=/workspace/webrtc/depot_tools
RUN mkdir -p $(dirname $DEPOT_TOOLS) \
  && echo "export DEPOT_TOOLS=/workspace/webrtc/depot_tools" >> /etc/bash.bashrc \
  && echo "export PATH=$PATH:$DEPOT_TOOLS" >> /etc/bash.bashrc \
  && echo "$PATH" \
  && ln -sf /usr/lib/llvm-${LLVM_VERSION}/bin/* /usr/bin 

# 设置默认工作目录
WORKDIR /workspace/webrtc

# 打印环境验证信息
RUN echo "✅ LLVM: $(clang --version | head -n 1)\n" && \
  echo "✅ Python: $(python3 --version)\n" && \
  echo "✅ Java: $(java -version 2>&1 | head -n 1)\n" && \
  echo "✅ Locale: $LANG\n"